server {
	listen 80 ;
	listen [::]:80 ;

	root /var/www/dacoustie;

	index index.php;

	location / {
		try_files $uri $uri/ =404;
	}

	location ~ \.php$ {
		try_files $uri =404;   
		fastcgi_split_path_info ^(.+\.php)(/.+)$;
		fastcgi_pass unix:/var/run/php/php5.6-fpm.sock;
		fastcgi_index index.php;
		include fastcgi_params;
	}
}
